<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.hiccup.top:8888/schema/spring-ext-context"

       xmlns:ext="http://www.hiccup.top:8888/schema/spring-ext"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.hiccup.top:8888/schema/spring-ext-context http://www.hiccup.top:8888/schema/spring-ext-context.xsd
            http://www.hiccup.top:8888/schema/spring-ext http://www.hiccup.top:8888/schema/spring-ext.xsd">

    <bean class="org.springframework.context.annotation.ExtConfigurationClassPostProcessor" />

    <!--自定义标签：使用示例：当当网数据源分片标签-->
    <ext:user id="testUser" userId="234001" name="hiccup" age="26" />

    <!--自动扫描注解-->
    <context:component-scan base-package="com.hiccup.test*"/>


</beans>